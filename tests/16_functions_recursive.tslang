    eric sum5 = sumTo(5) -> int
    eric sum10 = sumTo(10) -> int
    peric("  sumTo(5) = {sum5}")
    peric("  sumTo(10) = {sum10}")
    
    peric("")
    peric("Power tests:")
    eric p1 = power(2, 8) -> int
    eric p2 = power(3, 4) -> int
    eric p3 = power(10, 3) -> int
    peric("  2^8 = {p1}")
    peric("  3^4 = {p2}")
    peric("  10^3 = {p3}")
    
    peric("")
    peric("Countdown:")
    countdown(5)
    
    deschodt 0
