desnote Sum array elements
Deschodt sumArray(arr -> int[], size -> int) -> int
    eric total = 0 -> int
    aer i in range(0, size):
        total = total + arr[i]
    deschodt total

desnote Find maximum
Deschodt findMax(arr -> int[], size -> int) -> int
    eric max = arr[0] -> int
    aer i in range(1, size):
        erif (arr[i] > max):
            max = arr[i]
    deschodt max

desnote Find minimum
Deschodt findMin(arr -> int[], size -> int) -> int
    eric min = arr[0] -> int
    aer i in range(1, size):
        erif (arr[i] < min):
            min = arr[i]
    deschodt min

desnote Calculate average (returns integer)
Deschodt average(arr -> int[], size -> int) -> int
    eric sum = sumArray(arr, size) -> int
    deschodt sum / size

desnote Count occurrences
Deschodt countValue(arr -> int[], size -> int, target -> int) -> int
    eric count = 0 -> int
    aer i in range(0, size):
        erif (arr[i] == target):
            count = count + 1
    deschodt count

desnote Print array
Deschodt printArray(arr -> int[], size -> int) -> void
    aer i in range(0, size):
        peric("  [{i}] = {arr[i]}")

