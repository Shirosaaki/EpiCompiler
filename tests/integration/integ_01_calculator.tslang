Deschodt add(a -> int, b -> int) -> int
    deschodt a + b

Deschodt subtract(a -> int, b -> int) -> int
    deschodt a - b

Deschodt multiply(a -> int, b -> int) -> int
    deschodt a * b

Deschodt divide(a -> int, b -> int) -> int
    erif (b == 0):
        peric("  ERROR: Division by zero!")
        deschodt 0
    deschodt a / b

Deschodt power(base -> int, exp -> int) -> int
    erif (exp == 0):
        deschodt 1
    eric result = 1 -> int
    aer i in range(0, exp):
        result = result * base
    deschodt result

Deschodt factorial(n -> int) -> int
    erif (n <= 1):
        deschodt 1
    deschodt n * factorial(n - 1)

Deschodt absolute(n -> int) -> int
    erif (n < 0):
        deschodt 0 - n
    deschodt n

Deschodt max(a -> int, b -> int) -> int
    erif (a > b):
        deschodt a
    deschodt b

Deschodt min(a -> int, b -> int) -> int
    erif (a < b):
        deschodt a
    deschodt b

