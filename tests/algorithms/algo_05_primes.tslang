Deschodt isPrime(n -> int) -> int
    erif (n <= 1):
        deschodt 0
    erif (n <= 3):
        deschodt 1
    eric remainder = n - (n / 2) * 2 -> int
    erif (remainder == 0):
        deschodt 0
    eric i = 3 -> int
    darius (i * i <= n):
        eric mod = n - (n / i) * i -> int
        erif (mod == 0):
            deschodt 0
        i = i + 2
    deschodt 1

